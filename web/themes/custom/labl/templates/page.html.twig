{% set navigation_component %}
  {% if page.navigation %}
    {% include '@labl/02-molecules/navigation/primary-nav/primary-nav.twig' with {
      content: page.navigation,
      menu_id: 'primary-nav-menu',
      label: 'Main navigation'|t,
    } %}
  {% endif %}
{% endset %}

{% include '@labl/layout/page/page.twig' with {
  navigation: navigation_component,
  header: page.header,
  highlighted: page.highlighted,
  content: page.content,
  sidebar_first: page.sidebar_first ?? page.sidebar,
  sidebar_second: page.sidebar_second ?? null,
  footer: page.footer,
} %}
