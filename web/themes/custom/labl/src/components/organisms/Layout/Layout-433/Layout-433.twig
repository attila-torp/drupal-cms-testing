<section class="layout layout-433" data-bs-theme="{{ componentTheme }}">
    <div class="container">
        <div class="content-wrapper row">
            <div class="col-lg-4 order-1 mb-5 mb-lg-0 position-relative {% if mediaLeft %} media-left {% endif %}">
                {% include '../../../molecules/Content/Content.twig' with {
                    heading: heading,
                    headingSize: headingSize,
                    eyebrow: eyebrow,
                    text: text,
                    ctas: ctas,
                    logoTop: logoTop,
                    logoBottom: logoBottom,
                } %}

            </div>

            <div class="col-lg-8 order-2 {% if mediaLeft %} order-lg-0 pe-3 {% endif %}">
                <div class="row g-0">
                    <div class="col-md-7 featured-image">
                        {% include '../../../atoms/Image/Image.twig'  with {
                            image: featureImage.src,
                            imageAlt: featureImage.alt,
                            background: true,
                        } %}

                    </div>
                    <div class="col-md-5">
                        {% include '../../../atoms/Image/Image.twig'  with {
                            image: image.src,
                            imageAlt: image.alt,
                            background: true,
                            ratio: '1x1'
                        } %}

                        {% include '../../../atoms/Image/Image.twig'  with {
                            image: image2.src,
                            imageAlt: image2.alt,
                            background: true,
                            ratio: '1x1'
                        } %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>