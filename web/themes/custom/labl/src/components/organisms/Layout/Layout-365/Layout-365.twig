<div class="layout layout-365 {% if not video and not image %}bg-solid {% endif %} {% if fullScreen %}is-fullscreen {% endif %}"
     data-bs-theme="{{ componentTheme }}">
    {% if video %}
        <div class="background-video">
            {% include '../../../atoms/Video/Video.twig'  with {
                image: image,
                imageAlt: 'some alt text',
                video: video,
                autoplay: true
            } %}
        </div>
    {% elseif image %}
        {% include '../../../atoms/Image/Image.twig'  with {
            image: image,
            background: true
        } %}
    {% endif %}
    {% if video or image %}
        <div class="hero-overlay"></div>
    {% endif %}
    <div class="container">
        {% if sectionIntroHeading or sectionIntroText or sectionIntroCtas %}
            <div class="section-heading row {% if not leftAlign %}justify-content-center {% endif %}">

                <div class="col-12 col-md-8 col-xl-7 {% if not leftAlign %} text-center {% endif %}">
                    {% include '../../../molecules/Content/Content.twig' with {
                        heading: sectionIntroHeading,
                        headingSize: 'h2',
                        eyebrow: sectionIntroEyebrow,
                        text: sectionIntroText,
                        ctas: sectionIntroCtas
                    } %}
                </div>
            </div>
        {% endif %}

        <div class="row justify-content-center">

            <div class="col-featured col-lg-5 col-xl-6">
                    {% include '../../../molecules/Cards/Card-1/Card-1.twig' with {hasBorder: true, cardIcon: featuredCard.cardIcon, cardIconInline: false, cardEyebrow: featuredCard.cardEyebrow, cardHeadingSize: 'h3', cardHeading: featuredCard.cardHeading, cardText: featuredCard.cardText, image: featuredCard.image, ctas: featuredCard.ctas, leftAlign: true } %}
            </div>

            <div class="col-cards col-lg-7 col-xl-6">
                {% for card in cards %}
                    {% include '../../../molecules/Cards/Card-1/Card-1.twig' with {horizontal: true, hasBorder: true, cardIcon: card.cardIcon, cardIconInline: false, cardEyebrow: card.cardEyebrow, cardHeadingSize: 'h5', cardHeading: card.cardHeading, cardText: card.cardText, image: card.image, ctas: card.ctas, leftAlign: true } %}
                {% endfor %}
            </div>
        </div>


        {% if sectionFooterHeading or sectionFooterText or sectionFooterCtas %}
            <div class="section-heading row {% if not leftAlign %}justify-content-center {% endif %}">
                <div class="col-12 col-md-8 col-xl-7 {% if not leftAlign %} text-center {% endif %}">
                    {% include '../../../molecules/Content/Content.twig' with {
                        heading: sectionFooterHeading,
                        headingSize: 'h2',
                        eyebrow: sectionFooterEyebrow,
                        text: sectionFooterText,
                        ctas: sectionFooterCtas
                    } %}
                </div>
            </div>
        {% endif %}
    </div>
</div>