{%  set detailsAlign = 'start' %}
{% if postDetailsCenter %} {% set detailsAlign = 'center' %}{% endif %}

<section class="long-form-content long-form-content-29" data-bs-theme="{{ componentTheme }}">
    <div class="container d-flex flex-column">
        {% if sectionIntroHeading %}
            <div class="row {% if mediaTop %}order-lg-1 {% endif %}">
                <div class="col-md-12 col-lg-10 mx-auto">
                    <div class="section-intro">
                        {% include '../../../molecules/Content/Content.twig' with {
                            heading: sectionIntroHeading,
                            headingSize: 'h3',
                            eyebrow: sectionIntroEyebrow,
                            text: sectionIntroText,
                            ctas: ctas
                        } %}
                    </div>
                </div>
            </div>

        {% endif %}
        {% if image or video %}
            <div class="row{% if mediaTop %}order-lg-0 {% endif %}">

                <div class="col-md-12 col-lg-10 mx-auto">
                    <div class="media">
                        {% if video %}
                            {% include '../../../atoms/Image/Image.twig'  with {
                                image: image,
                                imageAlt: 'some alt text',
                                video: video,
                                toggle: 'modal',
                                target: 'myModal',
                                background: true,
                                ratio: '16x9',
                                caption: imageCaption
                            } %}
                        {% else %}
                            {% include '../../../atoms/Image/Image.twig'  with {
                                image: image,
                                background: false,
                                caption: imageCaption
                            } %}
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endif %}
        {#        Hardcoded content for styling purposes #}
        <div class="col-md-12 col-lg-10 mx-auto">
            <div class="wysiwyg-content">
